<body>
    
    <div class="container" >
        <h1>CRONÔMETRO</h1>

        <div class="timer">
            <div class="time" id="minutes">00</div>
            <div class="time" id="separador">:</div>
            <div class="time" id="seconds">00</div>
            <div class="time" id="separador">:</div>
            <div class="time" id="milliSeconds">000</div>
        </div>
        <div class="button">
            <button class="btn" id="iniciar" onclick="clicarIniciar()">Iniciar</button>
            <button class="btn" id="pausar" onclick="clicarPausar()" >Pausar</button>
            <button class="btn" id="resetar" onclick="clicarResetar()">Resetar</button>
        </div>
    </div>

    <script>
        
        //Pega os botões

        const iniciar = document.querySelector('#iniciar');
        const pausar = document.querySelector('#pausar');
        const resetar = document.querySelector('#resetar')

        //--------------------------------------------------------------

        //Pega os números do cronômetro
        
        const minuto = document.querySelector('#minutes');
        const segundo = document.querySelector('#seconds');
        const milesimo = document.querySelector('#milliSeconds');

        //---------------------------------------------------------------//
        
        let interval;
        let minutos = 0;
        let segundos = 0;
        let milesimos = 0;
        let pausado = 2;

        //--------------------------FUNÇÕES UTILIZADAS-------------------------------------//

        function clicarIniciar(){
            
            if (pausado != 1) {
                pausado = 1
            }

            pausar.style.display = 'flex'

        };

        function clicarPausar(){
            pausado = 2
        };

        function clicarResetar(){
            milesimos = 0;
            segundos = 0;
            minutos = 0;
            pausado = 2;

            minuto.innerHTML = '00';
            segundo.innerHTML = '00';
            milesimo.innerHTML = '000';
        };

        //-------------------------------------------------------------------------------------//
        
        
        interval = setInterval(()=>{

            if (pausado == 1){
                if (milesimos < 100){

                    milesimos ++
                    milesimo.innerHTML = milesimos

                    if (milesimos == 100){
                        segundos++
                        segundo.innerHTML = segundos
                        milesimos = 0

                        if (segundos == 60){
                            minutos++
                            minuto.innerHTML = minutos
                            segundos = 0
                        }
                        
                    }

                }
            }    
        },10)



            

            

            

        

                

    </script>
