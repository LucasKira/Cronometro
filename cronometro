        gap: 2rem;
    }
    .container h1{
        color: blue;
    }

    .timer{
        display: flex;
        font-size: 55px;
        font-weight: bold;
        color: rgb(52, 56, 61);
    }
    .time{
        display: flex;
        min-width: 50px;
        max-width: 50px;
    }
    #separador{
        padding: 0 5px;
        margin-left: 40px;
    }

    #milliSeconds{
        font-size: 50px;
        color: rgba(79, 84, 90, 0.589);
        
    }

    .button{
        display: flex;
        gap: 15px;
    }

    .btn{
        font-size: 20px;
        padding: 5px 10px;
        transition: all 0.05s ease-in-out;
    }
    #iniciar{
        background-color: blue;
